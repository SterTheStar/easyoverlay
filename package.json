{
  "name": "easy-overlay",
  "version": "1.0.0",
  "description": "Sistema de overlay modular e extens√≠vel para desktop com suporte a Windows e Linux",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "overlay",
    "desktop",
    "electron",
    "hud",
    "dashboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "active-win": "^9.0.0",
    "chokidar": "^3.5.3",
    "electron": "^28.1.0",
    "express": "^4.18.2",
    "node-window-manager": "^2.2.4",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.easyoverlay.app",
    "productName": "EasyOverlay",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
